<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usuario.candonate.activity_result_no">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/chicos_sonrientes"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_alignParentLeft="true"
            android:background="@android:color/white"
            android:src="@drawable/chicos_sonrientes" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@id/chicos_sonrientes"
            android:layout_marginTop="8dp"
            android:src="@drawable/candonate_logo" />

        <View
            android:id="@+id/linea"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/chicos_sonrientes"
            android:background="#80795548" />

        <TextView
            android:id="@+id/text_sorry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chicos_sonrientes"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="@dimen/margin_standard_left"
            android:layout_marginRight="@dimen/margin_standard_right"
            android:layout_marginTop="25dp"
            android:elevation="3dp"
            android:gravity="center_horizontal"
            android:text="@string/text_sorry"
            android:textColor="@color/brown_chocolate"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/main_text_sorry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_sorry"
            android:layout_marginLeft="@dimen/margin_standard_left"
            android:layout_marginRight="@dimen/margin_standard_right"
            android:text="@string/main_text_sorry" />

        <Button
            android:id="@+id/button_send_results"
            style="@style/button"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_below="@id/main_text_sorry"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/button"
            android:elevation="5dp"
            android:onClick="send_results_mail"
            android:text="@string/send_results_mail" />

        <Button
            android:id="@+id/button_back_to_quizz"
            style="@style/button"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@id/button_check_results"
            android:background="@drawable/button_gota"
            android:onClick="buttonToBackToQuizz"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/repeat_test"
            android:textSize="12sp" />

    </RelativeLayout>

</ScrollView>
