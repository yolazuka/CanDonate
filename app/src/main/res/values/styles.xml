<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#795548</item>
        <item name="colorPrimaryDark">#795548</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:background">#795548</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="scroll" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="android:background">@drawable/scroll</item>
    </style>

    <style name="checkbox" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:buttonTint">@color/red_corporative</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:textColor">@color/darker_brown_chocolate</item>

        </style>

    <style name="radiobutton" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:buttonTint">@color/red_corporative</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:textColor">@color/darker_brown_chocolate</item>
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>

    </style>

    <style name="questions" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/darker_brown_chocolate</item>
        <item name="android:layout_marginLeft">@dimen/margin_quiz_left</item>
        <item name="android:layout_marginRight">@dimen/margin_quiz_right</item>
        <item name="android:paddingBottom">@dimen/small</item>
        <item name="android:paddingTop">@dimen/small</item>
        <item name="android:paddingLeft">@dimen/small</item>

    </style>

</resources>
